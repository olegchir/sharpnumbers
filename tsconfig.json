{
    "compilerOptions": {
      // "declaration": true,
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "moduleResolution": "Node",
      "allowJs": true,      
      // "lib": [
      //   "esnext",
      //   "dom"
      // ]
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
    },  
    // "files": [
    //   "./node_modules/@types/node/index.d.ts"
    // ],
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }